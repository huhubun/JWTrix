@if (JwtSecurityToken != null)
{
    <MudStack>
        <MudText Typo="Typo.subtitle1">Header</MudText>

        @foreach (var headerItem in JwtSecurityToken.Header)
        {
            <DetailDecodeItem JwtSecurityToken="JwtSecurityToken" Item="headerItem" />
        }

        <MudText Typo="Typo.subtitle1">Payload</MudText>

        @foreach (var payloadItem in JwtSecurityToken.Payload)
        {
            <DetailDecodeItem JwtSecurityToken="JwtSecurityToken" Item="payloadItem" />
        }

        <MudText Typo="Typo.subtitle1">Signature</MudText>

        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.body1" Style="word-break: break-all; white-space: pre-wrap;">@JwtSecurityToken.RawSignature</MudText>
            </MudCardContent>
        </MudCard>

    </MudStack>
}

@code {
    [Parameter, EditorRequired]
    public JwtSecurityToken? JwtSecurityToken { get; set; }

}
